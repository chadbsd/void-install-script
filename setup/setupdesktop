#!/bin/bash

commandFailure="Graphics driver installation has failed."
for i in "${graphicsArray[@]}"
do
    case $i in
        amd)
            install mesa-dri vulkan-loader mesa-vulkan-radeon mesa-vaapi mesa-vdpau || die
        ;;

        amd-32bit)
            install void-repo-multilib || die
            xmirror -s "$repository" -r /mnt || die
            install libgcc-32bit libstdc++-32bit libdrm-32bit libglvnd-32bit mesa-dri-32bit || die
        ;;

        nvidia)
            install void-repo-nonfree || die
            xmirror -s "$repository" -r /mnt || die
            install nvidia || die

            # Enable mode setting for wayland compositors
            # This default should change to drm enabled with more recent nvidia drivers, expect this to be removed in the future.
            case "$bootloader" in
                grub)
                    sed -i -e 's/GRUB_CMDLINE_LINUX_DEFAULT="loglevel=4/GRUB_CMDLINE_LINUX_DEFAULT="loglevel=4 nvidia_drm.modeset=1/g' /mnt/etc/default/grub || die
                ;;
                uki)
                    sed -i -e 's/loglevel=4/loglevel=4 nvidia_drm.modeset=1/g' /mnt/etc/kernel.d/post-install/60-ukify || die
                ;;
            esac

        ;;

        nvidia-32bit)
            install void-repo-multilib-nonfree void-repo-multilib || die
            xmirror -s "$repository" -r /mnt || die
            install nvidia-libs-32bit || die
        ;;

        intel)
            install mesa-dri vulkan-loader mesa-vulkan-intel intel-video-accel || die
        ;;

        intel-32bit)
            install void-repo-multilib || die
            xmirror -s "$repository" -r /mnt || die
            install libgcc-32bit libstdc++-32bit libdrm-32bit libglvnd-32bit mesa-dri-32bit || die
        ;;

        nvidia-nouveau)
            install mesa-dri mesa-nouveau-dri || die
        ;;

        nvidia-nouveau-32bit)
            install void-repo-multilib || die
            xmirror -s "$repository" -r /mnt || die
            install libgcc-32bit libstdc++-32bit libdrm-32bit libglvnd-32bit mesa-dri-32bit mesa-nouveau-dri-32bit || die
        ;;

        *)
            echo "Continuing without graphics drivers..."
        ;;

    esac
done

commandFailure="DHCP client setup has failed."
case "$network" in
    NetworkManager)
        install NetworkManager || die
        system "ln -s /etc/sv/NetworkManager /var/service"
    ;;
    dhcpcd)
        system "ln -s /etc/sv/dhcpcd /var/service"
    ;;
esac

commandFailure="GUI installation has failed"
case "$desktop" in
    gnome)
        install gnome-core gnome-console gnome-tweaks gnome-browser-connector gnome-text-editor xdg-user-dirs xorg-minimal xorg-video-drivers || die
        system "ln -s /etc/sv/gdm /var/service"
    ;;
    kde)
        install kde-plasma kde-baseapps xdg-user-dirs xorg-minimal xorg-video-drivers || die
        system "ln -s /etc/sv/sddm /var/service"
    ;;
    xfce)
        install xfce4 xfce4-pulseaudio-plugin lightdm lightdm-gtk3-greeter xorg-minimal xdg-user-dirs xorg-fonts xorg-video-drivers || die

        [ "$network" == "NetworkManager" ] &&
            { install network-manager-applet || die ; }

        system "ln -s /etc/sv/lightdm /var/service"
    ;;
    sway)
        install sway elogind polkit polkit-elogind foot xorg-fonts xdg-desktop-portal-wlr xdg-user-dirs || die

        [ "$network" == "NetworkManager" ] &&
            { install network-manager-applet || die ; }

        system "ln -s /etc/sv/polkitd /var/service"

        if [ "$greetd" == "Yes" ]; then
            install greetd || die
            system "ln -s /etc/sv/greetd /var/service"
            sed -i -e 's,command = "agreety --cmd /bin/sh",command = "agreety --cmd sway-run",' /mnt/etc/greetd/config.toml || die
            cp misc/sway-run /mnt/usr/local/bin/sway-run || die

            system "chown root:root /usr/local/bin/sway-run"
            system "chmod 755 /usr/local/bin/sway-run"
            system "chmod +x /usr/local/bin/sway-run"
        fi
    ;;
    swayfx)
        install swayfx elogind polkit polkit-elogind foot xorg-fonts xdg-desktop-portal-wlr xdg-user-dirs || die

        [ "$network" == "NetworkManager" ] &&
            { install network-manager-applet || die ; }

        system "ln -s /etc/sv/polkitd /var/service"

        if [ "$greetd" == "Yes" ]; then
            install greetd || die
            system "ln -s /etc/sv/greetd /var/service"
            sed -i -e 's,command = "agreety --cmd /bin/sh",command = "agreety --cmd swayfx-run",' /mnt/etc/greetd/config.toml || die
            cp misc/sway-run /mnt/usr/local/bin/swayfx-run || die

            system "chown root:root /usr/local/bin/swayfx-run"
            system "chmod 755 /usr/local/bin/swayfx-run"
            system "chmod +x /usr/local/bin/swayfx-run"
        fi
    ;;
    i3)
        install i3 xorg-minimal xinit xterm xorg-fonts xorg-video-drivers xdg-user-dirs || die

        [ "$network" == "NetworkManager" ] &&
            { install network-manager-applet || die ; }

        if [ "$lightdm" == "Yes" ]; then
            install lightdm lightdm-gtk3-greeter || die
            system "ln -s /etc/sv/lightdm /var/service"
        fi
    ;;
    niri)
        install niri elogind polkit polkit-elogind alacritty fuzzel xorg-fonts xdg-desktop-portal-gtk xdg-desktop-portal-gnome xdg-user-dirs || die

        [ "$network" == "NetworkManager" ] &&
            { install network-manager-applet || die ; }

        system "ln -s /etc/sv/polkitd /var/service"

        if [ "$greetd" == "Yes" ]; then
            install greetd || die
            system "ln -s /etc/sv/greetd /var/service"
            sed -i -e 's,command = "agreety --cmd /bin/sh",command = "agreety --cmd niri-run",' /mnt/etc/greetd/config.toml || die
            cp misc/niri-run /mnt/usr/local/bin/niri-run || die

            system "chown root:root /usr/local/bin/niri-run"
            system "chmod 755 /usr/local/bin/niri-run"
            system "chmod +x /usr/local/bin/niri-run"
        fi
    ;;
    wayfire)
        install wayfire elogind polkit polkit-elogind alacritty xorg-fonts xdg-desktop-portal-wlr xdg-user-dirs || die

        [ "$network" == "NetworkManager" ] &&
            { install network-manager-applet || die ; }

        system "ln -s /etc/sv/polkitd /var/service"

        if [ "$greetd" == "Yes" ]; then
            install greetd || die
            system "ln -s /etc/sv/greetd /var/service"
            sed -i -e 's,command = "agreety --cmd /bin/sh",command = "agreety --cmd wayfire-run",' /mnt/etc/greetd/config.toml || die
            cp misc/wayfire-run /mnt/usr/local/bin/wayfire-run || die

            system "chown root:root /usr/local/bin/wayfire-run"
            system "chmod 755 /usr/local/bin/wayfire-run"
            system "chmod +x /usr/local/bin/wayfire-run"
        fi
    ;;
esac

commandFailure="Audio server installation has failed."
case "$audio" in
    pipewire)
        install pipewire alsa-pipewire wireplumber || die
        mkdir -p /mnt/etc/alsa/conf.d || die
        mkdir -p /mnt/etc/pipewire/pipewire.conf.d || die

        # This is now required to start pipewire and its session manager 'wireplumber' in an appropriate order, this should achieve a desireable result system-wide.
        echo 'context.exec = [ { path = "/usr/bin/wireplumber" args = "" } ]' > /mnt/etc/pipewire/pipewire.conf.d/10-wireplumber.conf || die
    ;;
    pulseaudio)
        install pulseaudio alsa-plugins-pulseaudio || die
    ;;
esac

return 0
